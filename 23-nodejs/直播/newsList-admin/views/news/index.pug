doctype html
html(lang='en')
	head
		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')
		meta(http-equiv='X-UA-Compatible' content='ie=edge')
		title 文章信息展示
		link(rel='stylesheet' href='./css/index.css' type='text/css')
	body
		.wrap
			ul.news-list
				each item in newsData
					li.news
						a(href='javascript:;')
							img(src=item.imgUrl alt='')
						.newsContainer
							h3
								a.title(href='javascript:;') #{item.title}
							.info
								span.tips
									span 纵火
									span 韩国
									span 逮捕
								// <span class="line"></span>
								span.time |  #{item.newTime}
			.pagination
				a.prev(href='') ⌜
				- for(let i=1; i <= pages; i++)
					a(href=`/news/index?currPage=${i}`) #{i}
				//- a(href='javascript:;') 1
				//- a(href='javascript:;') 2
				//- a(href='javascript:;') 3
				//- a(href='javascript:;') 4
				//- a(href='javascript:;') 5
				a.next(href='') ⌝